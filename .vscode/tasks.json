{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Dev",
            "type": "shell",
            "command": "npm run dev",

            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },

        {
            "label": "Build",
            "type": "shell",
            "command": "npm run build && npm run generate",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            // "dependsOn": ["Run Serve", "Run Watch"],
            "problemMatcher": []
        },

        {
            "label": "Build and Deploy",
            "type": "shell",
            "command": "git add . && git commit -am 'Deploy' && git push",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["Build"],
            "problemMatcher": []
        }
    ],
    "presentation": {
        "reveal": "always",
        "panel": "shared"
    }
}
